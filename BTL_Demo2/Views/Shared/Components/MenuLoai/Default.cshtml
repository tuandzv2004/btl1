@model IEnumerable<BTL_Demo2.ViewModels.MenuLoaiVM>
<div class="col-lg-12">
    <div class="mb-3">
       
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoas" asp-action="Index" asp-route-loai="@item.MaLoai">
                            <i class="fas fa-apple-alt me-2"></i>@item.TenLoai
                         </a>
                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>